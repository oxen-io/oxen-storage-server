#!/usr/bin/make -f

# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
#export DH_VERBOSE = 1

include /usr/share/dpkg/pkg-info.mk

%:
	dh $@ --buildsystem=cmake --with-systemd

override_dh_auto_configure:
	dh_auto_configure -- -DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_CXX_FLAGS="-march=westmere -mtune=haswell" -DCMAKE_C_FLAGS="-march=westmere -mtune=haswell" \
		-DCMAKE_INSTALL_RPATH=/usr/lib/$(DEB_HOST_MULTIARCH)/loki-core \
		-DLOKISS_VERSION_TAG=$(call dpkg_late_eval,LOKISS_VERSION_TAG,echo '$(DEB_VERSION)' | sed -e 's/.*-//')

override_dh_shlibdeps:
	dh_shlibdeps -l/usr/lib/$(DEB_HOST_MULTIARCH)/loki-core

override_dh_strip:
	dh_strip --no-ddebs

override_dh_installsystemd:
	dh_installsystemd --name=loki-testnet-storage-server --no-enable --no-start
	dh_installsystemd --name=loki-storage-server

override_dh_systemd_enable:
	dh_systemd_enable --name=loki-storage-server
